<style>
	main {
		max-width: 720px;
		margin: 0 auto;
		padding: 4rem 1.5rem;
	}

	header {
		margin-bottom: 3rem;
	}

	h1 {
		font-size: 2.5rem;
		font-weight: 600;
		margin: 0;
		letter-spacing: -0.02em;
	}

	.about {
		margin-bottom: 3rem;
	}

	.about p {
		font-size: 1.125rem;
		line-height: 1.7;
		color: #374151;
		margin: 0;
	}

	.contact-links h2 {
		font-size: 1.25rem;
		font-weight: 600;
		margin: 0 0 1.5rem;
		color: #111827;
	}

	.contact-links ul {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.contact-links li {
		margin: 0;
	}

	.contact-links a {
		color: var(--accent-primary);
		text-decoration: none;
		font-size: 1.125rem;
		font-weight: 500;
		border-bottom: 2px solid var(--accent-primary);
		padding-bottom: 2px;
		transition: all 0.2s;
		display: inline-block;
	}

	.contact-links li:nth-child(2) a {
		color: var(--accent-teal);
		border-bottom-color: var(--accent-teal);
	}

	.contact-links li:nth-child(3) a {
		color: var(--accent-secondary);
		border-bottom-color: var(--accent-secondary);
	}

	.contact-links li:nth-child(4) a {
		color: var(--accent-pink);
		border-bottom-color: var(--accent-pink);
	}

	.contact-links li:nth-child(5) a {
		color: #f59e0b;
		border-bottom-color: #f59e0b;
	}

	.contact-links a:hover {
		opacity: 0.7;
		transform: translateX(4px);
	}

	@media (max-width: 640px) {
		main {
			padding: 3rem 1.25rem;
		}

		h1 {
			font-size: 2rem;
		}
	}
</style>

