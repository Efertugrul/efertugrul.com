---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Writing â€” Efe Ertugrul">
	<main>
		<header>
			<h1>Writing</h1>
			<p class="intro">
				Short, opinionated pieces by Efe Ertugrul about infrastructure, research systems, and what actually happens when you ship.
			</p>
		</header>

		<section class="links">
			<a class="primary" href="https://medium.com/@efe.ertugrul" target="_blank" rel="me noopener">
				Read on Medium
			</a>
		</section>
	</main>
</Layout>

<style>
	main {
		max-width: 720px;
		margin: 0 auto;
		padding: 4rem 1.5rem;
	}

	header {
		margin-bottom: 4rem;
	}

	h1 {
		font-size: 2.5rem;
		font-weight: 600;
		margin: 0 0 1rem;
		letter-spacing: -0.02em;
	}

	.intro {
		font-size: 1.125rem;
		line-height: 1.7;
		color: #4b5563;
		margin: 0;
	}

	.links {
		margin-top: 2rem;
		padding-top: 2rem;
		border-top: 1px solid #e5e7eb;
	}

	.primary {
		display: inline-block;
		color: #ffffff;
		background: #111827;
		text-decoration: none;
		font-weight: 600;
		font-size: 1rem;
		padding: 0.75rem 1.25rem;
		border-radius: 8px;
		transition: background 0.2s;
	}

	.primary:hover {
		background: #374151;
	}

	@media (max-width: 640px) {
		main {
			padding: 3rem 1.25rem;
		}

		h1 {
			font-size: 2rem;
		}
	}
</style>

