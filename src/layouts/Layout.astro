---
import { ViewTransitions } from 'astro:transitions';

type Props = {
	title?: string;
	description?: string;
	activeNav?: 'home' | 'systems' | 'research' | 'writing' | 'music' | 'contact';
};

const {
	title = 'Efe Ertugrul — Systems, Infrastructure, Research',
	description = 'Efe Ertugrul — systems, research, writing.',
	activeNav,
} = Astro.props;

const path = Astro.url.pathname;
const inferredNav: Props['activeNav'] =
	path === '/'
		? 'home'
		: path.startsWith('/systems')
			? 'systems'
			: path.startsWith('/research')
				? 'research'
				: path.startsWith('/writing')
					? 'writing'
					: path.startsWith('/music')
						? 'music'
						: path.startsWith('/contact')
							? 'contact'
							: undefined;
const resolvedNav = activeNav ?? inferredNav;

const canonicalUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : Astro.url.toString();
const ogTitle = title;
const ogDescription = description;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="author" content="Efe Ertugrul" />
		<link rel="canonical" href={canonicalUrl} />

		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="Efe Ertugrul" />
		<meta property="og:title" content={ogTitle} />
		<meta property="og:description" content={ogDescription} />
		<meta property="og:url" content={canonicalUrl} />

		<meta name="twitter:card" content="summary" />
		<meta name="twitter:title" content={ogTitle} />
		<meta name="twitter:description" content={ogDescription} />

		<script type="application/ld+json">
			{JSON.stringify({
				'@context': 'https://schema.org',
				'@type': 'Person',
				name: 'Efe Ertugrul',
				url: Astro.site ? Astro.site.toString() : canonicalUrl,
				sameAs: [
					'https://github.com/Efertugrul',
					'https://linkedin.com/in/efe-ertugrul',
					'https://www.instagram.com/efeertugrulx/',
					'https://medium.com/@efe.ertugrul',
				],
			})}
		</script>
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<header class="site-header">
			<div class="container header-inner">
				<a class="brand" href="/">Efe Ertugrul</a>
				<nav class="nav" aria-label="Primary">
					<a class:list={['nav-link', resolvedNav === 'home' && 'is-active']} href="/">Home</a>
					<a class:list={['nav-link', resolvedNav === 'systems' && 'is-active']} href="/systems">Systems</a>
					<a class:list={['nav-link', resolvedNav === 'research' && 'is-active']} href="/research">Research</a>
					<a class:list={['nav-link', resolvedNav === 'writing' && 'is-active']} href="/writing">Writing</a>
					<a class:list={['nav-link', resolvedNav === 'music' && 'is-active']} href="/music">Music</a>
					<a class:list={['nav-link', resolvedNav === 'contact' && 'is-active']} href="/contact">Contact</a>
				</nav>
			</div>
			<div class="flying-raven" id="flyingRaven">
				<svg width="50" height="50" viewBox="0 0 512 512" fill="none" xmlns="http://www.w3.org/2000/svg">
					<g class="raven-body">
						<path d="M256 220c-15 0-28 8-35 20-7-12-20-20-35-20-22 0-40 18-40 40 0 15 8 28 20 35v45c0 22 18 40 40 40h30c22 0 40-18 40-40v-45c12-7 20-20 20-35 0-22-18-40-40-40z" fill="#1a1a1a"/>
						<ellipse cx="256" cy="265" rx="25" ry="35" fill="#0a0a0a"/>
						<path d="M246 250c0-5.5 4.5-10 10-10s10 4.5 10 10" fill="none" stroke="#2a2a2a" stroke-width="2"/>
						<circle cx="250" cy="255" r="3" fill="#666"/>
						<circle cx="262" cy="255" r="3" fill="#666"/>
						<path d="M256 265l4 8-4 2-4-2z" fill="#888"/>
						<path d="M240 235l-10-25-8-15c-2-4-1-8 2-10 4-2 8-1 10 2l12 30z" fill="#1a1a1a"/>
					</g>
					<g class="wing-left">
						<path d="M186 260c-15-5-30-12-45-20-12-7-24-15-35-24-8-7-15-14-20-22-3-5-2-10 2-13 5-3 10-2 13 2 8 12 20 23 35 32 18 11 38 19 58 24z" fill="#1a1a1a"/>
						<path d="M170 270c-20-3-40-10-58-20-15-8-28-18-38-30-6-7-5-14 2-18 7-4 14-2 18 4 12 15 28 27 47 35 16 7 33 11 50 13z" fill="#0a0a0a" opacity="0.8"/>
						<path d="M160 280c-15-2-30-7-43-15-10-6-18-13-24-22-4-6-2-12 4-15 6-3 12-1 15 4 8 11 19 19 32 25 11 5 23 8 35 9z" fill="#1a1a1a" opacity="0.6"/>
					</g>
					<g class="wing-right">
						<path d="M326 260c15-5 30-12 45-20 12-7 24-15 35-24 8-7 15-14 20-22 3-5 2-10-2-13-5-3-10-2-13 2-8 12-20 23-35 32-18 11-38 19-58 24z" fill="#1a1a1a"/>
						<path d="M342 270c20-3 40-10 58-20 15-8 28-18 38-30 6-7 5-14-2-18-7-4-14-2-18 4-12 15-28 27-47 35-16 7-33 11-50 13z" fill="#0a0a0a" opacity="0.8"/>
						<path d="M352 280c15-2 30-7 43-15 10-6 18-13 24-22 4-6 2-12-4-15-6-3-12-1-15 4-8 11-19 19-32 25-11 5-23 8-35 9z" fill="#1a1a1a" opacity="0.6"/>
					</g>
					<g class="tail-feathers">
						<path d="M256 340v25l-8 20-5-18v-27z" fill="#1a1a1a" opacity="0.7"/>
						<path d="M256 340v25l8 20 5-18v-27z" fill="#1a1a1a" opacity="0.7"/>
					</g>
				</svg>
			</div>
		</header>

		<main class:list={[resolvedNav === 'home' ? 'main-home' : 'container main']}>
			<slot />
		</main>

		<footer class="container footer">
			<span>© {new Date().getFullYear()} Efe Ertugrul</span>
		</footer>

		<script>
			document.addEventListener('astro:page-load', () => {
				const observer = new IntersectionObserver((entries) => {
					entries.forEach((entry) => {
						if (entry.isIntersecting) {
							entry.target.classList.add('is-visible');
						}
					});
				}, { threshold: 0.1 });

				document.querySelectorAll('.fade-in, .subsection, .case-study, .research-entry, .post, .card, .exit, .action-card, .fact').forEach((el) => {
					observer.observe(el);
				});

				const flyingRaven = document.getElementById('flyingRaven');
				
				function triggerRavenFlight() {
					if (flyingRaven) {
						flyingRaven.classList.remove('flying');
						void flyingRaven.offsetWidth;
						flyingRaven.classList.add('flying');
						
						setTimeout(() => {
							flyingRaven.classList.remove('flying');
						}, 4000);
					}
				}

				setTimeout(() => {
					triggerRavenFlight();
					setInterval(triggerRavenFlight, 45000);
				}, 15000);
			});
		</script>
	</body>
</html>

<style>
	:global(:root) {
		color-scheme: light;
		--bg: #fafbfc;
		--text: #0b1220;
		--muted: #445066;
		--border: rgba(15, 23, 42, 0.12);
		--soft: rgba(15, 23, 42, 0.06);
		--max: 980px;
		
		--accent-primary: #3b82f6;
		--accent-secondary: #8b5cf6;
		--accent-teal: #14b8a6;
		--accent-pink: #ec4899;
		--accent-light: rgba(59, 130, 246, 0.1);
		--gradient-1: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
		--gradient-2: linear-gradient(135deg, #14b8a6 0%, #3b82f6 100%);
		--gradient-3: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
	}

	:global(html, body) {
		margin: 0;
		padding: 0;
		background: var(--bg);
		color: var(--text);
		font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji",
			"Segoe UI Emoji";
		line-height: 1.55;
	}

	:global(a) {
		color: inherit;
		text-decoration-thickness: 1px;
		text-underline-offset: 3px;
	}

	:global(p) {
		margin: 0 0 0.9rem;
		color: var(--muted);
	}

	:global(h1, h2, h3) {
		letter-spacing: -0.02em;
		margin: 0 0 0.75rem;
		color: var(--text);
	}

	:global(h1) {
		font-size: clamp(1.6rem, 1.2rem + 1.5vw, 2.4rem);
		line-height: 1.2;
	}

	:global(h2) {
		font-size: 1.25rem;
		line-height: 1.25;
		margin-top: 2.2rem;
	}

	:global(ul) {
		margin: 0.25rem 0 1rem;
		padding-left: 1.2rem;
		color: var(--muted);
	}

	:global(code) {
		font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
		font-size: 0.95em;
		background: var(--soft);
		padding: 0.1em 0.35em;
		border-radius: 6px;
	}

	.container {
		max-width: var(--max);
		margin: 0 auto;
		padding: 0 20px;
	}

	.site-header {
		position: sticky;
		top: 0;
		z-index: 1000;
		background: rgba(255, 255, 255, 0.82);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid var(--border);
		overflow: hidden;
	}

	.flying-raven {
		position: absolute;
		top: 10px;
		left: -70px;
		pointer-events: none;
		opacity: 0;
		z-index: 1001;
		transform: translateX(0) translateY(0) rotate(0deg);
	}

	.flying-raven svg {
		filter: drop-shadow(0 3px 6px rgba(0, 0, 0, 0.15));
	}

	.flying-raven.flying {
		animation: ravenFlight 4s ease-in-out forwards;
	}

	.wing-left {
		transform-origin: 186px 260px;
		animation: flapLeft 0.25s ease-in-out infinite;
	}

	.wing-right {
		transform-origin: 326px 260px;
		animation: flapRight 0.25s ease-in-out infinite;
	}

	.tail-feathers {
		transform-origin: 256px 340px;
		animation: tailWag 0.5s ease-in-out infinite;
	}

	@keyframes ravenFlight {
		0% {
			left: -70px;
			top: 10px;
			opacity: 0;
			transform: translateY(0px) rotate(-5deg);
		}
		5% {
			opacity: 1;
		}
		25% {
			transform: translateY(-10px) rotate(3deg);
		}
		50% {
			transform: translateY(-6px) rotate(-2deg);
		}
		75% {
			transform: translateY(-12px) rotate(4deg);
		}
		95% {
			opacity: 1;
		}
		100% {
			left: calc(100% + 70px);
			top: 10px;
			opacity: 0;
			transform: translateY(-8px) rotate(8deg);
		}
	}

	@keyframes flapLeft {
		0%, 100% {
			transform: rotateZ(0deg) translateY(0);
		}
		50% {
			transform: rotateZ(-20deg) translateY(-3px);
		}
	}

	@keyframes flapRight {
		0%, 100% {
			transform: rotateZ(0deg) translateY(0);
		}
		50% {
			transform: rotateZ(20deg) translateY(-3px);
		}
	}

	@keyframes tailWag {
		0%, 100% {
			transform: rotateZ(0deg);
		}
		25% {
			transform: rotateZ(-3deg);
		}
		75% {
			transform: rotateZ(3deg);
		}
	}

	.header-inner {
		height: 62px;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 16px;
	}

	.brand {
		font-weight: 600;
		text-decoration: none;
		white-space: nowrap;
		background: var(--gradient-1);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.nav {
		display: flex;
		gap: 14px;
		flex-wrap: wrap;
		justify-content: flex-end;
	}

	.nav-link {
		text-decoration: none;
		color: var(--muted);
		padding: 6px 8px;
		border-radius: 10px;
	}

	.nav-link:hover {
		color: var(--accent-primary);
		background: var(--accent-light);
	}

	.nav-link.is-active {
		color: var(--accent-primary);
		background: var(--accent-light);
		font-weight: 500;
	}

	.main {
		padding: 56px 0 44px;
	}

	.main-home {
		padding: 0;
		margin: 0;
		max-width: 100%;
	}

	.footer {
		padding: 24px 20px 40px;
		border-top: 1px solid var(--border);
		color: var(--muted);
		font-size: 0.95rem;
	}

	@media (max-width: 520px) {
		.header-inner {
			height: auto;
			padding: 14px 0;
			align-items: flex-start;
		}
		.nav {
			gap: 8px;
		}
	}

	:global(.subsection, .case-study, .research-entry, .post, .card, .exit, .action-card, .fact) {
		opacity: 0;
		transform: translateY(30px);
		transition: opacity 0.6s ease-out, transform 0.6s ease-out;
	}

	:global(.subsection.is-visible, .case-study.is-visible, .research-entry.is-visible, .post.is-visible, .card.is-visible, .exit.is-visible, .action-card.is-visible, .fact.is-visible) {
		opacity: 1;
		transform: translateY(0);
	}

	:global(a) {
		transition: color 0.2s ease, opacity 0.2s ease, background 0.2s ease;
	}

	:global(.diagram rect, .diagram circle, .diagram path) {
		transition: transform 0.2s ease, opacity 0.2s ease, fill 0.2s ease;
	}

	:global(.diagram rect[stroke]:not([stroke-dasharray])):hover {
		transform: translateY(-2px);
		opacity: 0.9;
		cursor: pointer;
	}

	:global(.diagram text) {
		pointer-events: none;
	}
</style>
