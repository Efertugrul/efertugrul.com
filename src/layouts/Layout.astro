---
type Props = {
	title?: string;
	description?: string;
	activeNav?: 'home' | 'systems' | 'research' | 'writing' | 'contact';
};

const {
	title = 'Efe Ertugrul — Systems, Infrastructure, Research',
	description = 'Efe Ertugrul — systems, research, writing.',
	activeNav,
} = Astro.props;

const canonicalUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : Astro.url.toString();
const ogTitle = title;
const ogDescription = description;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="author" content="Efe Ertugrul" />
		<link rel="canonical" href={canonicalUrl} />

		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="Efe Ertugrul" />
		<meta property="og:title" content={ogTitle} />
		<meta property="og:description" content={ogDescription} />
		<meta property="og:url" content={canonicalUrl} />

		<meta name="twitter:card" content="summary" />
		<meta name="twitter:title" content={ogTitle} />
		<meta name="twitter:description" content={ogDescription} />

		<script type="application/ld+json">
			{JSON.stringify({
				'@context': 'https://schema.org',
				'@type': 'Person',
				name: 'Efe Ertugrul',
				url: Astro.site ? Astro.site.toString() : canonicalUrl,
				sameAs: [
					'https://github.com/Efertugrul',
					'https://linkedin.com/in/efe-ertugrul',
					'https://www.instagram.com/efeertugrulx/',
					'https://medium.com/@efe.ertugrul',
				],
			})}
		</script>
		<title>{title}</title>
	</head>
	<body>
		<header class="site-header">
			<div class="container header-inner">
				<a class="brand" href="/">Efe Ertugrul</a>
				<nav class="nav" aria-label="Primary">
					<a class:list={['nav-link', activeNav === 'home' && 'is-active']} href="/">Home</a>
					<a class:list={['nav-link', activeNav === 'systems' && 'is-active']} href="/systems">Systems</a>
					<a class:list={['nav-link', activeNav === 'research' && 'is-active']} href="/research">Research</a>
					<a class:list={['nav-link', activeNav === 'writing' && 'is-active']} href="/writing">Writing</a>
					<a class:list={['nav-link', activeNav === 'contact' && 'is-active']} href="/contact">Contact</a>
				</nav>
			</div>
		</header>

		<main class="container main">
			<slot />
		</main>

		<footer class="container footer">
			<span>© {new Date().getFullYear()} Efe Ertugrul</span>
		</footer>
	</body>
</html>

<style>
	:global(:root) {
		color-scheme: light;
		--bg: #ffffff;
		--text: #0b1220;
		--muted: #445066;
		--border: rgba(15, 23, 42, 0.12);
		--soft: rgba(15, 23, 42, 0.06);
		--max: 980px;
	}

	:global(html, body) {
		margin: 0;
		padding: 0;
		background: var(--bg);
		color: var(--text);
		font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji",
			"Segoe UI Emoji";
		line-height: 1.55;
	}

	:global(a) {
		color: inherit;
		text-decoration-thickness: 1px;
		text-underline-offset: 3px;
	}

	:global(p) {
		margin: 0 0 0.9rem;
		color: var(--muted);
	}

	:global(h1, h2, h3) {
		letter-spacing: -0.02em;
		margin: 0 0 0.75rem;
		color: var(--text);
	}

	:global(h1) {
		font-size: clamp(1.6rem, 1.2rem + 1.5vw, 2.4rem);
		line-height: 1.2;
	}

	:global(h2) {
		font-size: 1.25rem;
		line-height: 1.25;
		margin-top: 2.2rem;
	}

	:global(ul) {
		margin: 0.25rem 0 1rem;
		padding-left: 1.2rem;
		color: var(--muted);
	}

	:global(code) {
		font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
		font-size: 0.95em;
		background: var(--soft);
		padding: 0.1em 0.35em;
		border-radius: 6px;
	}

	.container {
		max-width: var(--max);
		margin: 0 auto;
		padding: 0 20px;
	}

	.site-header {
		position: sticky;
		top: 0;
		background: rgba(255, 255, 255, 0.82);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid var(--border);
	}

	.header-inner {
		height: 62px;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 16px;
	}

	.brand {
		font-weight: 600;
		text-decoration: none;
		white-space: nowrap;
	}

	.nav {
		display: flex;
		gap: 14px;
		flex-wrap: wrap;
		justify-content: flex-end;
	}

	.nav-link {
		text-decoration: none;
		color: var(--muted);
		padding: 6px 8px;
		border-radius: 10px;
	}

	.nav-link:hover {
		color: var(--text);
		background: var(--soft);
	}

	.nav-link.is-active {
		color: var(--text);
		background: var(--soft);
	}

	.main {
		padding: 56px 0 44px;
	}

	.footer {
		padding: 24px 20px 40px;
		border-top: 1px solid var(--border);
		color: var(--muted);
		font-size: 0.95rem;
	}

	@media (max-width: 520px) {
		.header-inner {
			height: auto;
			padding: 14px 0;
			align-items: flex-start;
		}
		.nav {
			gap: 8px;
		}
	}
</style>
